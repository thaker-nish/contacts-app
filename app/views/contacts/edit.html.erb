<h1>Edit contact!</h1>

<%= form_tag "/contacts/#{@contact.id}", method: :patch do%>
<div class="form-group">
  <%= label_tag :first_name, 'Enter first name: '%>
  <%= text_field_tag :first_name, @contact.first_name, class:"form-control" %>
</div>
<div class="form-group">
  <%= label_tag :middle_name, 'Enter middle name: '%>
  <%= text_field_tag :middle_name, @contact.middle_name, class:"form-control" %>
</div>
<div class="form-group">
  <%= label_tag :last_name, 'Enter last name: ' %>
  <%= text_field_tag :last_name, @contact.last_name, class:"form-control" %>
</div>
<div class="form-group">
  <%= label_tag :email, 'Enter email: ' %>
  <%= text_field_tag :email, @contact.email, class:"form-control" %>
</div>
<div class="form-group">
  <%= label_tag :phone_number, 'Enter phone number(4 digits): ' %>
  <%= text_field_tag :phone_number, @contact.phone_number, class:"form-control"%>
</div>
<div class="form-group">
  <%= label_tag :bio, 'Enter bio: ' %>
  <%= text_field_tag :bio,'', class:"form-control"%>
</div>
<div>
  <%= submit_tag 'Update contact!', class:"btn btn-primary" %>
</div>
<%end%>